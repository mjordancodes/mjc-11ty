{% macro card(role) %}
<div class="affiliation-card">
  <h3 class="title">
    {{ role.title }} at 
    {{ role.organization }}
  </h3>
  <span class="dates">{{ role.dates.start }} - {{ role.dates.end }}</span>

  <ul>
    {% for bullet in role.bullets %}
      <li>{{bullet}}</li>
    {% endfor %}
  </ul>
  
</div>
{% endmacro %}