<div class="h-card h-card-byline">
  <img src={{me.photos.profile}} class="u-photo" />
  <div class="content">
    <a href={{me.homepage.url}} class="u-url u-uid">
    <span class="p-name">
      <span class="p-given-name">{{me.name.first}}</span>
      <span class="p-family-name">{{me.name.last}}</span>
    </span> 
    </a>
    (<span class="u-pronoun">{{me.pronouns}}</span>)
    is a 
    <span class="p-job-title">{{resume.experience[0].title}}</span>
    in 
    <span class="p-locality">{{me.location.city}}</span>, 
    <span class="p-region">{{me.location.state}}</span>
  </div>
</div>