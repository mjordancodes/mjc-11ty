{% macro card(talk, excludeTagFromList) %}
<div class="talk-card card">
  <div class="card-header">
    <h3 class="title">
      {{ talk.title }} 
    </h3>
  </div>

  
  {% import "components/tag-list.njk" as tagList %}
  {{ tagList.tagList(talk.tags, excludeTagFromList) }}
  
  <div class="card-content">
    <p>{{ talk.summary }}</p>
  </div>
  
  <div class="card-actions">
    <a href="{{ talk.pageSlug }}" class="btn" />View Details</a>
  </div>
</div>
{% endmacro %}