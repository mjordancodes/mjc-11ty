{% macro card(talk) %}
<div class="talk-card">
  <div class="card-header">
    <h3 class="title">
      {{ talk.title }} 
    </h3>
  </div>

  <div class="tags">
    {% for tag in talk.tags %}
    {%- if tag != "presentation" -%}
      <span class="tag">
        {{ tag }}{% if loop.revindex != 1 %},{% endif %}
      </span>
    {% endif %}
    {% endfor %}
  </div>
  
  <p>{{ talk.summary }}</p>
  
  <a href="{{ talk.pageSlug }}" />View Slides</a>
</div>
{% endmacro %}